function user.isowner() {
   if [ "$(user.ison $1 $2)" ] && [ "$chanprefix_q" ]; then
      bleh=$(user.ison $1 $2)
      prefix=${bleh:0:1}
      if [ "$prefix" = "$chanprefix_q" ]; then
