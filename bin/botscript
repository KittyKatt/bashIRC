#!/bin/bash
ver="$(cat ~/bashIRC/VERSION)"
source ../etc/bashIRC.conf
input=${@}
input=${input#* }
raw_input=$(echo "${@}" | awk '{print $1}')
rm /tmp/.bashirc/help
if [ ! -e "/tmp/.bashirc" ]; then
   mkdir /tmp/.bashirc
fi

#Load all libraries
for i in $(ls ../lib/ | grep ".lib"); do
   source ../lib/$i
done
if [ -z "$(cat /tmp/.bashirc/perm/ignore | grep "$(nick)$(host)")" ]; then
	#Module system
	if [ "$loadallmodules" = "yes" ]; then
	for i in $(ls ../modules | grep ".module"); do
		source ../modules/$i
	done
	else
	for i in $loadmodule; do
		source "$i"
	done
	fi

	#Our help command :)
	hook=$(fantasy.hook help help.show > /dev/null)
fi
