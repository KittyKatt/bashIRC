#!/bin/bash
ver="0.3-1"
source ../etc/bashIRC.conf
input=${@}
rm /tmp/.bashirc/help
if [ ! -e "/tmp/.bashirc" ]; then
	mkdir /tmp/.bashirc
fi

#Load all libraries
for i in $(ls ../lib/ | grep ".lib"); do
	source ../lib/$i
done
#Module system
if [ "$loadallmodules" = "yes" ]; then	
   for i in $(ls ../modules | grep ".module"); do
      source ../modules/$i
   done
else
   for i in $loadmodule; do
      source "$i"
   done
fi

#Our help command :)
$(fantasy.hook help help.show) > /dev/null
